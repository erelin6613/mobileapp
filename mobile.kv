<LinkLabel@ButtonBehavior+Label>:
    #pos_hint: {'center_x': 0.5, 'center_y': 0.3}
    color: hex('#00C091')
    size: cm(6), cm(4)
    font_size: 14


<Button>:
	background_normal: ''
	background_color: hex('#00C091')
	color: hex('#FFFFFF')

<CategoryButton>:
    Button:
        size: cm(5), cm(5)
	
<MainPage>:

	AnchorLayout:

        orientation: 'vertical'

		size: root.width, root.height
		canvas:
			Rectangle:
				size: root.width, root.height


    	GridLayout:
			anchor_x: 'center'
			anchor_y: 'bottom'
        	cols: 1
        	rows: 14
        	padding : [50, 10, 50, 10]
        	spacing : [7, 7]
        	row_force_default: False
        	row_default_height: 50

        	Label:
        		text: ''

        	Image: 
        		source: 'hirerush_m.jpg'

        	Label:
        		text: 'Welcome to HireRush.com!'
        		font_size: 21
        		color: hex('#7985A1')


        	Button:

        		text: 'Log in'
        		font_size: 14
        		on_press: root.login_button_func()

        	Button:
        		text: 'Join as Professional'
        		font_size: 14
        		on_press: root.signup_pro_func()

        	Button: 
        		text: 'Find a Professional'
        		font_size: 14
        		on_press: root.signup_customer_func()



<Login>:
	AnchorLayout:

		size: root.width, root.height
		canvas:
			Rectangle:
				size: root.width, root.height



    	GridLayout:
			anchor_x: 'center'
			anchor_y: 'bottom'
        	cols: 1
        	rows: 14
        	padding : [50, 10, 50, 10]
        	spacing : [7, 7]
        	row_force_default: False
        	row_default_height: 50

        	Label:
        		text: 'Log into your account'
        		font_size: 20

        	Label:
        		text: 'Phone number or email'
        		font_size: 14
        		color: hex('#7985A1')

        	TextInput:
        		multiline: False

        	Label:
        		text: 'Password'
        		font_size: 14
        		color: hex('#7985A1')        	

        	TextInput:
        		multiline: False
        		password: True

            GridLayout:
                rows: 1
                cols: 2
                #size_hint: 0, 1

                CheckBox:
                    size_hint: 0.25, 1
                    color: hex('#00C091')
                    on_active: root.function(self, self.active)

                Label:
                    padding_left: 50
                    text: 'Keep me logged in'
                    font_size: 12
                    color: hex('#7985A1')


        	Button:
        		text: 'Login'
        		font_size: 14
        		on_press: root.login_button_func()

            LinkLabel:

                size_hint: 0.25, 0.25
                text: 'Cancel'
                #on_release: webbrowser.open(self.text)
                on_release: 
                    root.cancel_button_func()
                    #app.root.screens.transition.direction = 'right'




<Signup_pro>:
    AnchorLayout:

        size: root.width, root.height
        canvas:
            Rectangle:
                size: root.width, root.height


        GridLayout:
            #anchor_x: 'center'
            #anchor_y: 'top'
            cols: 1
            #rows: 14
            padding : [50, 10, 50, 10]
            spacing : [10, 10]
            row_force_default: False
            row_default_height: 35

            Label:
                size_hint_x: 0.25
                size_hint_y: None
                row_force_default: True
                text: 'Join our team of professionals'
                font_size: 18
                color: hex('#7985A1')

            GridLayout:
                cols: 2
                rows: 6
                spacing : [10, 10]
                row_force_default: True
                row_default_height: 35

                Label:
                    text: 'First name'
                    font_size: 14
                    color: hex('#7985A1')
                    width: 70


                TextInput:
                    multiline: False

                Label:
                    text: 'Last name'
                    font_size: 14
                    color: hex('#7985A1')
                    width: 70


                TextInput:
                    multiline: False

                Label:
                    text: 'Phone number'
                    font_size: 14
                    color: hex('#7985A1')
                    width: 70


                TextInput:
                    multiline: False

                Label:
                    text: 'Email'
                    font_size: 14
                    color: hex('#7985A1')
                    width: 70

                TextInput:
                    multiline: False

                Label:
                    text: 'Password'
                    font_size: 14
                    color: hex('#7985A1')
                    width: 70       

                TextInput:
                    multiline: False
                    password: True
            
                Label:
                    text: 'Confirm password'
                    font_size: 14
                    color: hex('#7985A1')
                    width: 70

                TextInput:
                    multiline: False
                    password: True       


            GridLayout:
                rows: 1
                cols: 2
                padding: [0, 70, 0, 0]
                #size_hint: 0, 1

                CheckBox:
                    size_hint: 0.25, 1
                    color: hex('#00C091')

                LinkLabel:

                    #size_hint: 0.25, 0.25
                    text: 'I accept HireRush Terms&Conditions \nand HireRush Privacy Policy'
                    on_release: webbrowser.open('https://www.hirerush.com/terms-conditions')
                    #on_release: root.cancel_button_func()



            GridLayout:
                anchor_x: 'center'
                anchor_y: 'bottom'
                cols: 1
                #rows: 14
                padding : [50, 10, 50, 10]
                spacing : [10, 10]
                row_force_default: True
                row_default_height: 35 

                Button:
                    text: 'Next'
                    font_size: 14
                    width: 50
                    on_press: root.phone_verification()

                LinkLabel:

                    #size_hint: 0.25, 0.25
                    text: 'Cancel'
                    #on_release: webbrowser.open(self.text)
                    on_release: root.cancel_button_func()





